<Window x:Class="WBF_mozifoglalas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WBF_mozifoglalas"
        mc:Ignorable="d"
        Title="Mozijgy foglalás" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="18*"/>
            <RowDefinition Height="132*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="3" Margin="0,5,0,0"/>
        <Label Content="Mozijegy foglaló rendszer" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" RenderTransformOrigin="0.5,0.5" Width="254" />
        <DataGrid x:Name="DataGrid" Margin="0,36,0,0" SelectionChanged="DataGrid_SelectionChanged" Grid.RowSpan="2"/>
        <Button Content="Adatok betöltése" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="2" VerticalAlignment="Center" Click="adatokbetoltese" Height="20" Width="94"/>
        <Button Content="Foglalás" HorizontalAlignment="Left" Margin="120,0,0,0" Grid.Row="2" VerticalAlignment="Center" Click="foglalas" Height="20" Width="47"/>
        <Button Content="Csak ahol van hely" HorizontalAlignment="Left" Margin="180,0,0,0" Grid.Row="2" VerticalAlignment="Center" Click="vanehely"/>
    </Grid>
</Window>
